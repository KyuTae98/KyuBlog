{
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "@types"],
        "esModuleInterop": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "types": ["node", "webpack-env"],
        "plugins": [
            {
              "name": "typescript-styled-plugin",
              "lint": {
                "validProperties": [
                  "aspect-ratio",
                  "elevation",
                  "margin-vertical",
                  "margin-horizontal",
                  "padding-horizontal",
                  "padding-vertical",
                  "resize-mode",
                  "shadow-color",
                  "shadow-opacity",
                  "shadow-offset",
                  "shadow-radius",
                  "text-align-vertical",
                  "tint-color"
                ]
              }
            }
          ]
    }
  }